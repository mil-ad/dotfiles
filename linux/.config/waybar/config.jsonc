    },
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "ÔÉß",
        "performance": "ÔÉß",
        "balanced": "Ôâé",
        "power-saver": "ÔÅ¨"
      }
    },
    "network": {
        "interface": "w*",
        "format-wifi": "Óòæ Ôá´ {essid} ({signalStrength}%)",
        "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
        "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Óôà",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "network.ethernet": {
        "interface": "en*",
        "format-ethernet": "{ipaddr}/{cidr} Ôûñ blah",
        "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Óôà bbb",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "MUTED TODO",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },
    "pulseaudio/slider": {
        "min": 0,
        "max": 100,
        "orientation": "horizontal"
    },
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/airpods": {
        // "exec": "~/.scripts/polybar-bluetooth-device.sh --status 14:14:7D:DF:7B:DB",
        "exec": "echo airpods",
        "interval": 2
    },
    "custom/mullvad": {
        // "exec": "~/.scripts/polybar-bluetooth-device.sh --status 14:14:7D:DF:7B:DB",
        "exec": "echo mullvad",
        "interval": 2
    },
    "custom/gojeh": {
        "exec": "$HOME/.local/share/go/bin/gojeh",
        "on-click": "echo toggle | nc -U /tmp/gojeh.sock",
        "on-click-right": "echo next | nc -U /tmp/gojeh.sock",
        "on-scroll-up": "echo more_time | nc -U /tmp/gojeh.sock",
        "on-scroll-down": "echo less_time | nc -U /tmp/gojeh.sock",
        "tooltip": false
    },
    "custom/power": {
        "format" : "‚èª ",
    "tooltip": false,
    "menu": "on-click",
    "menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
    "menu-actions": {
    "shutdown": "shutdown",
    "reboot": "reboot",
    "suspend": "systemctl suspend",
    "hibernate": "systemctl hibernate"
    }
    }
}
