bindsym $mod+Ctrl+p exec --no-startup-id ~/.local/bin/open_paper_no_annotations
bindsym $mod+Ctrl+space exec --no-startup-id $HOME/.local/bin/enter_snippet $HOME/.scripts/snippets.yml

