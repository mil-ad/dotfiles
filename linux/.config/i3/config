# Mod1=<Alt>, Mod4=<Super> Mod5=CapsLock (remapped via setxkbmap)
set $mod Mod4
set $caps Mod5

workspace 1 output 'LG Electronics LG SDQHD 203NTBKCY173' eDP-1 DP-virtDown
workspace 2 output 'LG Electronics LG SDQHD 203NTBKCY173' eDP-1 DP-virtDown
workspace 3 output 'LG Electronics LG SDQHD 203NTBKCY173' eDP-1 DP-virtDown
workspace 4 output 'LG Electronics LG SDQHD 203NTBKCY173' eDP-1 DP-virtDown
workspace 5 output 'LG Electronics LG SDQHD 203NTBKCY173' eDP-1 DP-virtDown
workspace 6 output 'LG Electronics LG SDQHD 203NTBKCY173' eDP-1 DP-virtDown
workspace 7 output 'LG Electronics LG SDQHD 203NTBKCY173' eDP-1 DP-virtDown
workspace 8 output 'LG Electronics LG SDQHD 203NTBKCY173' eDP-1 DP-virtDown
workspace 9 output DP-virtUp DP-1 DP-2 DP-3 DP-4 HDMI-1 HDMI-2 HDMI-3 HDMI-4 eDP-1

# repeating a workspace switch command should switch back to the prior workspace
workspace_auto_back_and_forth yes

default_orientation auto
popup_during_fullscreen smart
focus_on_window_activation smart

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

focus_follows_mouse yes
# floating_maximum_size 2560 x 1440

default_border pixel 2
default_floating_border pixel 2
hide_edge_borders --i3 none

# Disable gaps and borders when there's only one container
smart_gaps on
smart_borders on
gaps inner 8
gaps outer -2
# bottom gap could be useful when using floating polybar
# gaps bottom 35

title_align left
for_window [all] title_format %title
for_window [all] title_window_icon padding 5px
for_window [app_id="kitty"] title_format "Û∞Üç "
for_window [app_id="kitty-app"] title_format %title

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
set $font_family Berkeley Mono SemiCondensed Medium
font pango:$font_family 8

for_window [urgent=latest] focus

##########################################
# Internal Keybindings
##########################################
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9

bindsym $mod+Shift+1 move container to workspace 1; workspace 1
bindsym $mod+Shift+2 move container to workspace 2; workspace 2
bindsym $mod+Shift+3 move container to workspace 3; workspace 3
bindsym $mod+Shift+4 move container to workspace 4; workspace 4
bindsym $mod+Shift+5 move container to workspace 5; workspace 5
bindsym $mod+Shift+6 move container to workspace 6; workspace 6
bindsym $mod+Shift+7 move container to workspace 7; workspace 7
bindsym $mod+Shift+8 move container to workspace 8; workspace 8
bindsym $mod+Shift+9 move container to workspace 9; workspace 9

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+Shift+Ctrl+Right move workspace to output right
bindsym $mod+Shift+Ctrl+Left move workspace to output left
bindsym $mod+Shift+Ctrl+Up move workspace to output up
bindsym $mod+Shift+Ctrl+Down move workspace to output down

# workspace back and forth (with/without active container)
bindsym $mod+bracketleft workspace back_and_forth
# bindsym $mod+Shift+b move container to workspace back_and_forth; workspace back_and_forth

bindsym $mod+minus split vertical;
bindsym $mod+backslash split horizontal;

bindsym $mod+s layout toggle splitv splith tabbed stacking

bindsym $mod+a focus parent
bindsym $mod+m move scratchpad
bindsym $mod+Tab scratchpad show
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+q kill
bindsym $mod+Shift+space floating toggle
bindsym $mod+Shift+s sticky toggle

bindsym $mod+plus gaps inner current plus 5; gaps outer current plus 5
bindsym $mod+Shift+minus gaps inner current minus 5; gaps outer current minus 5
bindsym $mod+Shift+0 gaps inner current set 8; gaps outer current set -2

# Resize window (you can also use the mouse for that)
# TODO
#bindsym $mod+minus mode "resize"
mode "resize" {
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mod--releasee "default"
}

