bindsym $mod+Shift+z exec --no-startup-id shotgun $(slop -f "-i %i -g %g") "$HOME/Pictures/screenshot-$(date +%F_%T).png" && notify-send "ðŸ“¸ Screenshot region saved to ${HOME}/Pictures"
bindsym $mod+Shift+Return exec pcmanfm

