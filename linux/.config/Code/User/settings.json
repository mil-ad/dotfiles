{
    "telemetry.telemetryLevel": "off",
    "update.mode": "manual",
    "update.showReleaseNotes": true,
    // "editor.fontFamily": "'IBM Plex Mono', 'Cascadia Code', 'Symbols Nerd Font', 'Noto Color Emoji', 'Vazirmatn UI NL', 'IntelOne Mono', 'JetBrains Mono Medium', 'IBM Plex Mono Medium', 'Iosevka Nerd Font Mono', 'JetBrainsMono-Medium', 'Material Icons'",
    "editor.fontFamily": "'IBM Plex Mono', 'Cascadia Code', 'Symbols Nerd Font', 'Noto Color Emoji', 'Vazirmatn UI NL', 'IntelOne Mono', 'JetBrains Mono Medium', 'IBM Plex Mono Medium', 'Iosevka Nerd Font Mono', 'JetBrainsMono-Medium', 'Material Icons'",
    // "editor.fontWeight": "400",
    "editor.fontSize": 18,
    "editor.tabSize": 4,
    "editor.mouseWheelZoom": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.cursorBlinking": "smooth",
    // "editor.cursorSmoothCaretAnimation": true,
    "editor.rulers": [
        80,
        120
    ],
    "editor.wordWrapColumn": 80,
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": false,
    "editor.wordBasedSuggestions": false,
    "editor.formatOnPaste": true,
    "editor.suggestSelection": "first",
    "editor.accessibilitySupport": "off",
    "editor.unicodeHighlight.nonBasicASCII": true,
    "editor.unicodeHighlight.includeComments": true,
    "editor.gotoLocation.multipleDeclarations": "gotoAndPeek",
    "editor.gotoLocation.multipleDefinitions": "gotoAndPeek",
    "editor.gotoLocation.multipleTypeDefinitions": "gotoAndPeek",
    "editor.minimap.enabled": false,
    // Disable italics in comment blocks
    // From https://stackoverflow.com/a/46278282/298209
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "name": "Comment",
                "scope": [
                    "comment",
                    "comment.block",
                    "comment.block.documentation",
                    "comment.line",
                    "comment.line.double-slash",
                    "punctuation.definition.comment"
                ],
                "settings": {
                    "fontStyle": ""
                    // "fontStyle": "italic",
                    // "fontStyle": "italic underline",
                    // "fontStyle": "italic bold underline",
                }
            }
        ]
    },
    "files.associations": {
        "*.mplstyle": "python"
    },
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    "workbench.editor.enablePreview": false,
    "workbench.editor.labelFormat": "short",
    "workbench.editor.decorations.badges": false,
    "workbench.editor.decorations.colors": false,
    "workbench.statusBar.visible": true,
    "workbench.tips.enabled": false,
    "workbench.activityBar.visible": true,
    "window.menuBarVisibility": "toggle",
    "window.commandCenter": false,
    "window.nativeFullScreen": false,
    "workbench.colorTheme": "Catppuccin Mocha",
    "catppuccin.accentColor": "yellow",
    "catppuccin.colorOverrides": {
        "mocha": {
            "base": "#181828",
            "mantle": "#11111E",
            // "mantle": "#020202",
            "crust": "#020202",
            "yellow": "#fabd2f"
        }
    },
    "catppuccin.customUIColors": {
        "mocha": {
            "statusBar.foreground": "accent",
            "sideBarTitle.foreground": "accent",
            "statusBarItem.remoteBackground": "accent",
            "focusBorder": "accent"
        }
    },
    "workbench.colorCustomizations": {
        "[Catppuccin Mocha]": {
            // "terminal.background": "#020202",
            "terminal.foreground": "#f2e5bc",
            "terminal.ansiBlack": "#1d2021",
            "terminal.ansiBrightBlack": "#928374",
            "terminal.ansiRed": "#cc241d",
            "terminal.ansiBrightRed": "#f42c3e",
            "terminal.ansiGreen": "#98971a",
            "terminal.ansiBrightGreen": "#b8bb26",
            "terminal.ansiYellow": "#d79921",
            "terminal.ansiBrightYellow": "#fabd2f",
            "terminal.ansiBlue": "#458588",
            "terminal.ansiBrightBlue": "#99c6ca",
            "terminal.ansiMagenta": "#b16286",
            "terminal.ansiBrightMagenta": "#d3869b",
            "terminal.ansiCyan": "#689d6a",
            "terminal.ansiBrightCyan": "#7ec16e",
            "terminal.ansiWhite": "#a89984",
            "terminal.ansiBrightWhite": "#ebdbb2"
        }
    },
    "workbench.iconTheme": "material-icon-theme",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.layoutControl.enabled": false,
    "workbench.editor.pinnedTabsOnSeparateRow": true,
    "explorer.decorations.colors": false,
    "explorer.sortOrder": "type",
    "explorer.incrementalNaming": "smart",
    "explorer.decorations.badges": false,
    "terminal.integrated.fontFamily": "'IosevkaTerm Nerd Font Mono', 'Iosevka Nerd Font', 'Iosevka Nerd Font Mono', 'Cascadia Code', 'Noto Color Emoji', 'Vazir WOL', 'JetBrains Mono Medium', 'JetBrainsMono-Medium','IBMPlexMono-Bold', 'IBM Plex Mono SemiBold'",
    // "terminal.integrated.fontFamily": "",
    "terminal.integrated.fontSize": 20,
    "terminal.integrated.inheritEnv": true,
    "terminal.external.linuxExec": "kitty",
    "terminal.integrated.macOptionClickForcesSelection": true,
    "terminal.integrated.macOptionIsMeta": true,
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "terminal.integrated.gpuAcceleration": "on",
    "terminal.external.osxExec": "/Applications/kitty.app",
    "scm.diffDecorationsGutterWidth": 2,
    "scm.diffDecorations": "gutter",
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.openDiffOnClick": false,
    "git.mergeEditor": true,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "problems.decorations.enabled": false,
    "search.quickOpen.includeHistory": false,
    "isort.args": [
        "--profile",
        "black"
    ],
    // =========================================================================
    // Per file type settings
    // =========================================================================
    "[python]": {
        "editor.tabSize": 4,
        "editor.rulers": [
            88,
            120
        ],
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
            "editor.defaultFormatter": "ms-python.black-formatter"
        }
    },
    "[latex]": {
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 80,
        "editor.rulers": [
            80
        ],
        "editor.formatOnSave": false
    },
    "[markdown]": {
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 80,
        "files.trimTrailingWhitespace": false
    },
    // =========================================================================
    // Extension settings
    // =========================================================================
    "python.languageServer": "Pylance",
    // Providing pylintArgs disables all the sensible defaults that VSCode
    // applies. I have therefore copy-pasted them manually (see
    // pylintUseMinimalCheckers). The real change I want to make here is
    // extension-pkg-whitelist
    "pylint.args": [
        "--disable=all",
        "--enable=F,E,unreachable,duplicate-key,unnecessary-semicolon,global-variable-not-assigned,unused-variable,binary-op-exception,bad-format-string,anomalous-backslash-in-string,bad-open-mode",
        "--extension-pkg-whitelist=torch,numpy"
    ],
    "flake8.args": [
        "--ignore=E501"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": false,
    "python.testing.autoTestDiscoverOnSaveEnabled": false,
    "jupyter.askForKernelRestart": false,
    "jupyter.interactiveWindow.textEditor.executeSelection": true,
    "notebook.output.textLineLimit": 200,
    "notebook.lineNumbers": "on",
    "latex-workshop.view.pdf.viewer": "external",
    "latex-workshop.view.pdf.external.viewer.command": "sioyek",
    "latex-workshop.view.pdf.external.synctex.command": "sioyek",
    "latex-workshop.view.pdf.external.synctex.args": [
        "--inverse-search",
        "code -r -g \"%1:%2\"",
        "--reuse-window",
        "--forward-search-file",
        "%TEX%",
        "--forward-search-line",
        "%LINE%",
        "%PDF%"
    ],
    "latex-workshop.message.error.show": false,
    "latex-workshop.message.warning.show": false,
    "latex-workshop.latexindent.path": "latexindent",
    "latex-workshop.latexindent.args": [
        "-c",
        "%TMPDIR%/",
        "%TMPFILE%",
        "-y=defaultIndent: '%INDENT%'"
    ],
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.recipe.default": "first",
    "latex-workshop.latex.outDir": "build",
    "latex-workshop.latex.tools": [
        {
            "name": "make",
            "command": "make"
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "Makefile",
            "tools": [
                "make"
            ]
        }
    ],
    "fileutils.delete.useTrash": true,
    "git-graph.showStatusBarItem": false,
    "rewrap.autoWrap.enabled": false,
    "autoDocstring.startOnNewLine": true,
    "autoDocstring.docstringFormat": "google",
    "autoDocstring.generateDocstringOnEnter": false,
    "githubPullRequests.telemetry.enabled": false,
    "githubPullRequests.fileListLayout": "tree",
    "markdown.marp.enableHtml": true,
    "markdown.marp.chromePath": "/usr/bin/brave",
    // =========================================================================
    // Archive
    // =========================================================================
    "todo.embedded.provider": "ag",
    "todo.symbols.box": "[ ]",
    "todo.symbols.cancelled": "[-]",
    "todo.symbols.done": "[x]",
    // "todo.symbols.box": "-",
    // "todo.symbols.cancelled": "-",
    // "todo.symbols.done": "-",
    "spellright.language": [
        "en_GB",
        "en_US"
    ],
    "spellright.groupDictionaries": false,
    "spellright.configurationScope": "user",
    // Currently trying out LTeX extension
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "python"
    ],
    "spellright.spellContextByClass": {
        "latex": "body",
        "markdown": "body",
        "python": "comments"
    },
    "spellright.statusBarIndicator": false,
    "[todo]": {
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "editor.renderWhitespace": "none",
        "editor.renderControlCharacters": false,
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 120
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "window.zoomLevel": -2
}
