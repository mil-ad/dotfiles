{
    "telemetry.telemetryLevel": "off",
    "update.mode": "manual",
    "editor.fontFamily": "'Cascadia Code', 'Noto Color Emoji', 'Vazirmatn UI NL', 'JetBrains Mono Medium', 'IBM Plex Mono Medium', 'Iosevka Nerd Font Mono', 'JetBrainsMono-Medium', 'Material Icons'",
    // "editor.fontWeight": "400",
    "editor.fontSize": 18,
    "editor.tabSize": 4,
    "editor.mouseWheelZoom": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.cursorBlinking": "smooth",
    // "editor.cursorSmoothCaretAnimation": true,
    "editor.rulers": [
        80,
        120
    ],
    "editor.wordWrapColumn": 80,
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": false,
    "editor.wordBasedSuggestions": false,
    "editor.formatOnPaste": true,
    "editor.suggestSelection": "first",
    "editor.accessibilitySupport": "off",
    "editor.unicodeHighlight.nonBasicASCII": true,
    "editor.unicodeHighlight.includeComments": true,
    "editor.gotoLocation.multipleDeclarations": "gotoAndPeek",
    "editor.gotoLocation.multipleDefinitions": "gotoAndPeek",
    "editor.gotoLocation.multipleTypeDefinitions": "gotoAndPeek",
    // Disable italics in comment blocks
    // From https://stackoverflow.com/a/46278282/298209
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "name": "Comment",
                "scope": [
                    "comment",
                    "comment.block",
                    "comment.block.documentation",
                    "comment.line",
                    "comment.line.double-slash",
                    "punctuation.definition.comment",
                ],
                "settings": {
                    "fontStyle": "",
                    // "fontStyle": "italic",
                    // "fontStyle": "italic underline",
                    // "fontStyle": "italic bold underline",
                }
            },
        ]
    },
    "files.associations": {
        "*.mplstyle": "python"
    },
    "workbench.editor.enablePreview": false,
    "workbench.editor.labelFormat": "short",
    "workbench.editor.decorations.badges": false,
    "workbench.editor.decorations.colors": false,
    "workbench.statusBar.visible": true,
    "workbench.tips.enabled": false,
    "workbench.activityBar.visible": true,
    "workbench.colorTheme": "Popping and Locking",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    "explorer.decorations.colors": false,
    "explorer.sortOrder": "type",
    "explorer.incrementalNaming": "smart",
    "explorer.decorations.badges": false,
    "terminal.integrated.fontFamily": "'Cascadia Code', 'Symbols Nerd Font Mono', 'Noto Color Emoji', 'Vazir WOL', 'Iosevka Nerd Font Mono', 'JetBrains Mono Medium', 'JetBrainsMono-Medium','IBMPlexMono-Bold', 'IBM Plex Mono SemiBold', 'Courier New', Menlo",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.inheritEnv": true,
    "terminal.external.linuxExec": "kitty",
    "terminal.integrated.macOptionClickForcesSelection": true,
    "terminal.integrated.macOptionIsMeta": true,
    "terminal.integrated.enableMultiLinePasteWarning": false,
    // "terminal.integrated.rendererType": "dom",
    "terminal.integrated.gpuAcceleration": "on",
    "scm.diffDecorationsGutterWidth": 2,
    "scm.diffDecorations": "gutter",
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderSideBySide": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.openDiffOnClick": false,
    "git.mergeEditor": true,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "problems.decorations.enabled": false,
    "breadcrumbs.enabled": false,
    "search.quickOpen.includeHistory": false,
    "window.zoomLevel": -2,
    "isort.args": [
        "--profile",
        "black"
    ],
    // =========================================================================
    // Per file type settings
    // =========================================================================
    "[python]": {
        "editor.tabSize": 4,
        "editor.rulers": [
            88,
            120
        ],
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        },
    },
    "[latex]": {
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 80,
        "editor.rulers": [
            80
        ],
        "editor.formatOnSave": false,
    },
    "[markdown]": {
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 80,
        "files.trimTrailingWhitespace": false,
    },
    // =========================================================================
    // Extension settings
    // =========================================================================
    "python.showStartPage": false,
    "python.jediEnabled": false, // Use Microsoft Python Analysis instead
    "python.languageServer": "Pylance",
    "python.formatting.provider": "black",
    // Providing pylintArgs disables all the sensible defaults that VSCode
    // applies. I have therefore copy-pasted them manually (see
    // pylintUseMinimalCheckers). The real change I want to make here is
    // extension-pkg-whitelist
    "python.linting.pylintArgs": [
        "--disable=all",
        "--enable=F,E,unreachable,duplicate-key,unnecessary-semicolon,global-variable-not-assigned,unused-variable,binary-op-exception,bad-format-string,anomalous-backslash-in-string,bad-open-mode",
        "--extension-pkg-whitelist=torch,numpy"
    ],
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--ignore=E501",
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": false,
    "python.testing.autoTestDiscoverOnSaveEnabled": false,
    "jupyter.sendSelectionToInteractiveWindow": true,
    "jupyter.askForKernelRestart": false,
    "latex-workshop.view.pdf.viewer": "external",
    "latex-workshop.view.pdf.external.viewer.command": "sioyek",
    "latex-workshop.view.pdf.external.synctex.command": "sioyek",
    "latex-workshop.view.pdf.external.synctex.args": [
        "--inverse-search",
        "code -r -g \"%1:%2\"",
        "--reuse-window",
        "--forward-search-file",
        "%TEX%",
        "--forward-search-line",
        "%LINE%",
        "%PDF%"
    ],
    "latex-workshop.message.error.show": false,
    "latex-workshop.message.warning.show": false,
    "latex-workshop.latexindent.path": "latexindent",
    "latex-workshop.latexindent.args": [
        "-c",
        "%TMPDIR%/",
        "%TMPFILE%",
        "-y=defaultIndent: '%INDENT%'"
    ],
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.recipe.default": "first",
    "latex-workshop.latex.outDir": "build",
    "latex-workshop.latex.tools": [
        {
            "name": "make",
            "command": "make",
        },
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "Makefile",
            "tools": [
                "make"
            ]
        },
    ],
    "fileutils.delete.useTrash": true,
    "git-graph.showStatusBarItem": false,
    "rewrap.autoWrap.enabled": false,
    "autoDocstring.startOnNewLine": true,
    "autoDocstring.docstringFormat": "google",
    "githubPullRequests.telemetry.enabled": false,
    "githubPullRequests.fileListLayout": "tree",
    "autoDocstring.generateDocstringOnEnter": false,
    "markdown.marp.enableHtml": true,
    "markdown.marp.chromePath": "/usr/bin/brave",
    // =========================================================================
    // Archive
    // =========================================================================
    "todo.embedded.provider": "ag",
    "todo.symbols.box": "[ ]",
    "todo.symbols.cancelled": "[-]",
    "todo.symbols.done": "[x]",
    // "todo.symbols.box": "-",
    // "todo.symbols.cancelled": "-",
    // "todo.symbols.done": "-",
    "spellright.language": [
        "en_GB",
        "en_US"
    ],
    "spellright.groupDictionaries": false,
    "spellright.configurationScope": "user",
    // Currently trying out LTeX extension
    "spellright.documentTypes": [
        // "markdown",
        // "plaintext",
        // "latex"
    ],
    "spellright.spellContextByClass": {
        "latex": "body",
        "markdown": "comments",
        "python": "comments",
    },
    "spellright.statusBarIndicator": false,
    "[todo]": {
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "editor.renderWhitespace": "none",
        "editor.renderControlCharacters": false,
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 120,
    },
}
