#!/bin/bash

engine=$(printf 'ğŸ“º YouTube\nğŸ¤“ Google Scholar\nğŸ¥ Letterboxd\nğŸ›’ Amazon\nğŸ™‹ eBay\nğŸ“š goodreads' | dmenu)

[[ $engine ]] && query=$(echo '' | dmenu -l 0 -p "ğŸ” $engine")

case $engine in
    "ğŸ“º YouTube") URL="https://www.youtube.com/results?search_query=${query}" ;;
    "ğŸ¤“ Google Scholar") URL="https://scholar.google.com/scholar?q=${query}" ;;
    "ğŸ¥ Letterboxd") URL="https://letterboxd.com/search/${query}" ;;
    "ğŸ›’ Amazon") URL="https://www.amazon.co.uk/s?k=${query}" ;;
    "ğŸ™‹ eBay") URL="https://www.ebay.co.uk/sch/i.html?_nkw=${query}" ;;
    "ğŸ“š goodreads") URL="https://www.goodreads.com/search?q=${query}" ;;
esac

[[ $query ]] && xdg-open "${URL}" && i3-msg --quiet [urgent=latest] focus
