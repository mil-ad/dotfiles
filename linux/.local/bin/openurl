#!/usr/bin/env bash

URL=$(rofimenu -kb-accept-alt "" -kb-custom-1 "Shift+Return" -l 0 -p "üåç")

exit_code=$?

if [[ ! "$URL" =~ ^https?:// ]]; then
    URL="https://${URL}"
fi

if [ $exit_code -eq 0 ]; then
    open $URL
elif  [ $exit_code -eq 10 ]; then
    gtk-launch firefox-minimal.desktop $URL
fi
