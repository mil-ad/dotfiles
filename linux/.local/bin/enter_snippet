#!/usr/bin/env bash

assert_installed yq jq ydotool wl-copy rofimenu type-clipboard-content

selected_idx=$(yq -o json < $1 | jq -r '
.[] |
if (.value | type == "string" and (index("\n") | not)) then
  "\(.name): \(.value)"
else
  "\(.name): ≣≣≣≣≣"
end
' | rofimenu -format i)

if [ "$selected_idx" == "" ]; then
    exit
else
    yq -r ".["$selected_idx"].value" "$1" | sed -z '$s/\n$//' | wl-copy && type-clipboard-content
fi
