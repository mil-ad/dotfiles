#!/usr/bin/env bash

set -x

selected_idx=$(yq < $1 | jq -r '
.[] |
if (.value | type == "string" and (index("\n") | not)) then
  "\(.name): \(.value)"
else
  "\(.name): ≣≣≣≣≣"
end
' | rofimenu -format i)

if [ "$selected_idx" == "" ]; then
    exit
else
    yq -r ".["$selected_idx"].value" "$1" | sed -z '$s/\n$//' | xclip -selection clipboard | xdotool key Shift+Insert
fi
