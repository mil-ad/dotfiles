#!/usr/bin/env bash

CONFIG="${XDG_CONFIG_HOME:-$HOME/.config}/bluetooth-devices.json"

state=$(budsctl status | jq -r '.state')

# If connected, just disconnect.
if [[ "$state" == "connected" || "$state" == "connecting" ]]; then
    budsctl toggle "$(budsctl status | jq -r '.device')"
    exit 0
fi

# Not connected — pick a device to connect.
count=$(jq 'length' "$CONFIG")

if [[ "$count" -eq 1 ]]; then
    addr=$(jq -r '.[0].address' "$CONFIG")
    budsctl toggle "$addr"
    exit 0
fi

# Multiple devices — prompt with rofi.
index=$(jq -r '.[].name' "$CONFIG" | rofimenu -format i)
[[ -z "$index" ]] && exit 1

addr=$(jq -r ".[$index].address" "$CONFIG")
budsctl toggle "$addr"
