[color]
    ui = auto
[core]
    editor = vim
    pager = delta
	excludesFile = ~/.gitignore
[push]
    default = simple
    autoSetupRemote = true
[commit]
    gpgSign = true
[gpg]
    format = ssh
[diff]
    colorMoved = plain
    algorithm = histogram
[difftool]
    prompt = false
[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
[merge]
    conflictstyle = diff3
[alias]
    stash-everything = stash --include-untracked
    wdiff = diff --color-words
	unstage = restore --staged .
[color "status"]
    added = yellow
    changed = green
    untracked = magenta
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red reverse
    new = green reverse
    oldMoved = bold blue reverse
    newMoved = brightblue reverse
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[credential]
    helper = cache --timeout=36000
[pull]
    rebase = true
[init]
    defaultBranch = main
[include]
    path = ~/.gitconfig.local
[interactive]
    diffFilter = delta --color-only --features=interactive
[delta]
    true-color = always
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
    line-numbers = true
    side-by-side = true
[merge]
    conflictstyle = zdiff3
