// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "helix_mode": true,
  "buffer_line_height": "comfortable",
  "ui_font_family": "Berkeley Mono",
  "ui_font_features": {},
  "ui_font_size": 13,
  "features": {
    "edit_prediction_provider": "none"
  },
  "agent": {
    "enable_feedback": false,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    }
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank",
    "use_smartcase_find": true,
    "toggle_relative_line_numbers": true
  },
  "theme": "Kanagawa Wave",
  "buffer_font_family": "Berkeley Mono",
  "buffer_font_fallbacks": ["Symbols Nerd Font"], // doesn't seem to work :(
  "buffer_font_size": 16,
  "buffer_font_weight": 600,
  "buffer_font_features": {
    "calt": false
  },
  "show_whitespaces": "all",
  // Let's leave the telemetry on for a while
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "soft_wrap": "none",
  "wrap_guides": [80, 120],
  "terminal": {
    "font_family": "Iosevka Nerd Font Mono",
    "line_height": "standard",
    "font_fallbacks": ["Symbols Nerd Font"] // doesn't seem to work
  },
  "languages": {
    "Markdown": {
      "soft_wrap": "editor_width"
    },
    "Python": {
      "formatter": {
        "external": {
          "command": "ruff",
          "arguments": [
            "check",
            "--exit-zero",
            "--fix",
            "--stdin-filename",
            "{buffer_path}",
            "-"
          ]
        }
      },
      "format_on_save": "on"
    }
  }
}
