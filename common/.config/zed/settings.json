// documentation: https://zed.dev/docs/configuring-zed
{
  "auto_install_extensions": {
    "ini": true,
    "kanagawa-themes": true,
    "toml": true,
    "terraform": true,
    "dockerfile": true,
    "make": true,
    "popping-and-locking": true
  },
  "edit_predictions": {
    "mode": "subtle"
  },
  "auto_indent_on_paste": true,
  "show_edit_predictions": true,
  "icon_theme": "Zed (Default)",
  "allow_rewrap": "in_selections",
  "preview_tabs": {
    "enable_preview_from_code_navigation": true,
    "enable_preview_from_file_finder": false,
    "enabled": true
  },
  "ui_font_family": "Berkeley Mono",
  "ui_font_features": {},
  "ui_font_size": 12,
  "features": {
    "edit_prediction_provider": "zed"
  },
  "vim_mode": false,
  "helix_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank",
    "use_smartcase_find": true,
    "toggle_relative_line_numbers": false
  },
  "theme": "Kanagawa",
  "buffer_font_family": "Berkeley Mono",
  "buffer_font_fallbacks": ["Symbols Nerd Font", "Noto Emoji"], // doesn't seem to work :(
  "buffer_font_size": 12,
  "buffer_font_weight": 600,
  "buffer_font_features": {
    "calt": false
  },
  "buffer_line_height": "comfortable",
  "show_whitespaces": "all",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "soft_wrap": "none",
  "wrap_guides": [80, 120],
  "terminal": {
    "font_family": "BerkeleyMono Nerd Font",
    "font_weight": 600,
    "line_height": {
      "custom": 1.2292
    },
    // "font_fallbacks": ["Symbols Nerd Font"], // doesn't seem to work
    "detect_venv": {
      "on": {
        "directories": [".venv"],
        "activate_script": "default"
      }
    }
  },
  "languages": {
    "Markdown": {
      "soft_wrap": "editor_width"
    },
    "Python": {
      "format_on_save": "on"
    }
  },
  "agent": {
    "default_profile": "write",
    "enable_feedback": false,
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-latest"
    }
  },
  "agent_servers": {
    "claude": {}
  },
  "file_types": {
    "ini": ["*.mplstyle"]
  },
  "theme_overrides": {
    "Kanagawa": {
      "border.variant": "#b57614",
      "text.accent": "#fabd2f"
    }
  }
}
