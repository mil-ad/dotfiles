// documentation: https://zed.dev/docs/configuring-zed
{
  "disable_ai": true,
  "minimap": {
    "show": "never",
  },
  "git_panel": {
    "tree_view": true,
  },
  "which_key": {
    "enabled": true,
  },
  "session": {
    "trust_all_worktrees": true,
  },
  "auto_update": true,
  "project_panel": {
    "starts_open": false,
    "git_status": true,
    "folder_icons": false,
    "file_icons": true,
    "hide_gitignore": true,
  },
  "window_decorations": "client",
  "tabs": {
    "file_icons": false,
  },
  "tab_bar": {
    "show_tab_bar_buttons": true,
    "show_nav_history_buttons": false,
    "show": true,
  },
  "file_finder": {
    "file_icons": true,
  },
  "auto_install_extensions": {
    "ini": true,
    "kanagawa-themes": true,
    "toml": true,
    "terraform": true,
    "dockerfile": true,
    "make": true,
    "comment": true,
    "material-icon-theme": true,
  },
  "edit_predictions": {
    "provider": "zed",
    "mode": "subtle",
  },
  "auto_indent_on_paste": true,
  "show_edit_predictions": true,
  "icon_theme": "Material Icon Theme",
  "allow_rewrap": "in_selections",
  "preview_tabs": {
    "enable_keep_preview_on_code_navigation": true,
    "enable_preview_from_file_finder": false,
    "enabled": true,
  },
  "ui_font_family": "Berkeley Mono",
  "ui_font_features": {},
  "ui_font_size": 12,
  "vim_mode": false,
  "helix_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank",
    "use_smartcase_find": true,
    "toggle_relative_line_numbers": false,
  },
  "theme": "Popping and Locking",
  "buffer_font_family": "Berkeley Mono",
  "buffer_font_fallbacks": ["Symbols Nerd Font", "Noto Emoji"], // doesn't seem to work :(
  "buffer_font_size": 12,
  "buffer_font_weight": 600,
  "buffer_font_features": {
    "calt": false,
  },
  "buffer_line_height": "comfortable",
  "show_whitespaces": "all",
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "soft_wrap": "editor_width",
  "wrap_guides": [80, 120],
  "terminal": {
    "blinking": "on",
    "font_family": "BerkeleyMono Nerd Font",
    "font_weight": 600,
    "line_height": {
      "custom": 1.225,
    },
    // "font_fallbacks": ["Symbols Nerd Font"], // doesn't work on Linux yet
    "detect_venv": {
      "on": {
        "directories": [".venv"],
        "activate_script": "default",
      },
    },
  },
  "languages": {
    "Markdown": {
      "show_edit_predictions": false,
      "completions": {
        "words": "disabled",
      },
      "soft_wrap": "bounded",
      "wrap_guides": [],
    },
    "Python": {
      "format_on_save": "on",
    },
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "enable_feedback": false,
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-latest",
    },
  },
  "agent_servers": {
    "claude": {},
  },
  "file_types": {
    "ini": ["*.mplstyle"],
  },
  "theme_overrides": {
    "Kanagawa": {
      "border.variant": "#689d6a",
      "text.accent": "#fabd2f",
    },
    // "Popping and Locking": {
    //   "editor.invisible": "#363636",
    //   "border": "#3c3836",
    //   "tab.active_background": "#3c3836",
    //   "ghost_element.selected": "#3c3836",
    //   "element.hover": "#3c3836",
    //   "element.background": "#3c3836",
    //   "element.active": "#3c3836",
    //   "editor.active_line.background": "#DCD7BA0d",
    // },
  },
}
