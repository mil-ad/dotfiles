// documentation: https://zed.dev/docs/key-bindings
[
  {
    "bindings": {
      // I would have put this in Workspace context but for some reason the
      // default takes higher precedence. So overwriting that instead.
      "f11": "workspace::ToggleZoom",
    },
  },
  {
    "context": "Workspace",
    "bindings": {
      "f11": "workspace::ToggleZoom",
      "ctrl-`": "terminal_panel::ToggleFocus",
      "ctrl-k ctrl-g": "git_panel::ToggleFocus",
      "ctrl-k ctrl-b": "project_panel::ToggleFocus",
      "ctrl-k ctrl-o": "workspace::Open",
      "ctrl-g": [
        "task::Spawn",
        { "task_name": "start lazygit", "reveal_target": "center" },
      ],
      "ctrl-y": [
        "task::Spawn",
        { "task_name": "start yazi", "reveal_target": "center" },
      ],
      "alt-super-o": "projects::OpenRecent",
      "alt-super-h": "workspace::ToggleLeftDock",
      "alt-super-l": "workspace::ToggleRightDock",
      "alt-super-j": "workspace::ToggleBottomDock",
    },
  },
  {
    "context": "Workspace && buttom_dock == TerminalPanel",
    "bindings": {
      "ctrl-`": "terminal_panel::ToggleFocus",
    },
  },
  {
    "context": "Workspace && buttom_dock != TerminalPanel",
    "bindings": {
      "ctrl-`": "terminal_panel::Toggle",
    },
  },
  //TODO: I'm not sure what's the point of !menu yet
  {
    "context": "Editor",
    "bindings": {
      "alt-super-i": [
        "editor::SelectNext",
        {
          "replace_newest": false,
        },
      ],
      "alt-super-g": "editor::SelectAllMatches",
      "alt-super-e": "editor::SplitSelectionIntoLines",
      "alt-super-q": "editor::Rewrap",
    },
  },
  {
    "context": "Editor && !menu",
    "bindings": {
      "ctrl-c": "editor::Copy", // vim default: return to normal mode
      "ctrl-x": "editor::Cut", // vim default: decrement
      "ctrl-v": "editor::Paste", // vim default: visual block mode
      "alt-v": "editor::Paste",
      "ctrl-f": "buffer_search::Deploy", // vim default: page down
      "ctrl-a": "editor::SelectAll", // vim default: increment
      "ctrl-w": "pane::CloseActiveItem",
      "ctrl-r": "outline::Toggle",
      "ctrl-shift-r": "project_symbols::Toggle",
    },
  },
  {
    "context": "Editor && vim_mode == helix_normal && !VimWaiting && !menu",
    "bindings": {
      "alt-j": "editor::MoveLineDown",
      "alt-k": "editor::MoveLineUp",
      "ctrl-g": [
        "task::Spawn",
        { "task_name": "start lazygit", "reveal_target": "center" },
      ],
      "ctrl-y": [
        "task::Spawn",
        { "task_name": "start yazi", "reveal_target": "center" },
      ],
    },
  },
  {
    "context": "Pane",
    "bindings": {
      "ctrl-]": "pane::ActivateNextItem",
      "ctrl-[": "pane::ActivatePreviousItem",
    },
  },
  {
    "context": "AgentPanel",
    "bindings": {
      "ctrl-n": "agent::NewThread",
    },
  },
  {
    "context": "Terminal",
    "bindings": {
      "alt-c": "terminal::Copy",
      "alt-v": "terminal::Paste",
      "ctrl-t": ["terminal::SendKeystroke", "ctrl-t"],
      "ctrl-f": "workspace::ToggleZoom",
      "ctrl-e": "editor::ToggleFocus",
    },
  },
  // {
  //   "context": "Workspace > !Editor",
  //   "bindings": {
  //     "ctrl-e": "editor::ToggleFocus"
  //   }
  // }
]
