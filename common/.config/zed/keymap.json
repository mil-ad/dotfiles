// documentation: https://zed.dev/docs/key-bindings
[
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-`": "workspace::ToggleBottomDock",
      "cmd-`": "workspace::ToggleBottomDock",
      "alt-super-n": [
        "task::Spawn",
        { "task_name": "start lazygit", "reveal_target": "center" }
      ],
      "ctrl-k ctrl-g": "git_panel::ToggleFocus",
      "ctrl-k ctrl-b": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "alt-super-g": "editor::SelectAllMatches",
      "alt-super-i": [
        "editor::SelectNext",
        {
          "replace_newest": false
        }
      ]
    }
  },
  {
    "context": "Editor && !menu",
    "bindings": {
      "ctrl-c": "editor::Copy", // vim default: return to normal mode
      "ctrl-x": "editor::Cut", // vim default: decrement
      "ctrl-v": "editor::Paste", // vim default: visual block mode
      "alt-v": "editor::Paste",
      "ctrl-y": "editor::Undo", // vim default: line up
      "ctrl-f": "buffer_search::Deploy", // vim default: page down
      // vim default: go back
      "ctrl-a": "editor::SelectAll", // vim default: increment
      "ctrl-w": "pane::CloseActiveItem"
    }
  },
  {
    "context": "Editor && !VimControl",
    "bindings": {
      "ctrl-d": "editor::DeleteLine",
      "ctrl-j": "editor::JoinLines"
    }
  },
  {
    "context": "Editor && vim_mode == normal && !VimWaiting && !menu",
    "bindings": {
      "space g g": [
        "task::Spawn",
        { "task_name": "lazygit", "target": "center" }
      ]
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "ctrl-]": "pane::ActivateNextItem",
      "ctrl-[": "pane::ActivatePreviousItem"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "alt-c": "terminal::Copy",
      "alt-v": "terminal::Paste",
      "ctrl-t": ["terminal::SendKeystroke", "ctrl-t"]
    }
  },
  {
    "bindings": {
      "alt-super-o": "workspace::Open"
    }
  }
]
